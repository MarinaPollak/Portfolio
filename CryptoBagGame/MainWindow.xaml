<Window x:Class="CryptoBagGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crypto Bag Game" Height="300" Width="400">
    <Grid Background="Black" >
        <!-- Draw Button -->
        <Button x:Name="DrawCoinButton" Content="Pull a Coin 👜" 
                HorizontalAlignment="Center" VerticalAlignment="Top" 
                Margin="0,20,0,0" Width="120" Height="25" Click="DrawCoinButton_Click" BorderBrush="{x:Null}" FontFamily="Cambria Math" Foreground="#FFFAF9F9" Background="#FFEE2A16"/>

        <!-- Coin Details Display -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Coin Icon -->
            <Image x:Name="CoinIcon" Width="100" Height="100" Margin="0,0,0,10"/>

            <!-- Coin Name and Value -->
            <TextBlock x:Name="CoinDetails" FontSize="16" TextAlignment="Center" Foreground="White" FontFamily="Corbel"/>
        </StackPanel>
    </Grid>
</Window>